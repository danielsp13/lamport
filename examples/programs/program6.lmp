var a,b : array[1..2*n] of integer; {n es una constante predefinida}

procedure Sort( s,t : integer );
  var i,j : integer;
begin
  for i := s to t do
    for j := s+1 to t do
      if a[i] < a[j] then
        swap(a[i], b[j]);
end

procedure Copiar( o,s,t : integer );
  var d : integer;
begin
  for d := 0 to t-s do
    b[o+d] := a[s+d];
end
