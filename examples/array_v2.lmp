program Arrays;
	var tam : integer := 5;
	var numeros : array [5] integer;
	
procedure inicializa();
begin
	for i:=0 to tam-1 do
	begin
		numeros[i] := i;
	end
end

procedure printArr();
begin
	for i:=0 to tam-1 do
	begin
		print(" --> numeros ", i,": ", numeros[i]);
	end
end


process main;
begin
	inicializa();
	printArr();
end
