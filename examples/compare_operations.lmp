program Operaciones;
	var num1 : integer := (-4 + 6) * 10 - 2;
	var num2 : real := 3.0;
	var str1 : string := "hola";
	var str2 : string := "hola";
	var str3 : string := "Hola";
	var str4 : string := "Adios";

process Main;
	var num3 : integer := 5;
